BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: user_input
            font_size: 48
            on_text: app.convert_miles_to_kilometres(user_input.text)
        BoxLayout:
            size_hint_x: 0.25
            orientation: 'vertical'
            Button:
                text: 'Up'
                font_size: 32
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                font_size: 32
                on_press: app.handle_increment(-1)
